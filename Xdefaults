! Xft settings
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.dpi: 96

! urxvt settings
! General
urxvt*scrollBar: false
urxvt*secondaryScroll: true
urxvt*saveLines: 65535
urxvt*urgentOnBell: true

! Extensions
urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*perl-ext: default,matcher,clipboard,font-size,url-select,keyboard-select,-searchable-scrollback
urxvt*url-launcher: google-chrome
urxvt*matcher.button: 1

! Appearance
URxvt.Font: xft:Ubuntu Mono:antialias=true:size=10
URxvt.boldFont: xft:Ubuntu Mono:antialias=true:size=10

!  - Cursor
urxvt*cursorColor: #DCDCCC

!  - Color scheme
urxvt*foreground: white
urxvt*background: black

*color0: #2E3436
*color1: #a40000
